        }

        .input-group {
            display: grid;
            gap: 5px;
            margin-bottom: 15px;
        }

        label {
            color: #666;
            font-weight: bold;
        }

        .input-field {
            padding: 15px;
            width: 100%;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 16px;
            box-sizing: border-box;
        }

        .input-field.is-invalid {
            border-color: red;
            background-color: #f8d7da;
        }

        .btn-primary {
            background-color: #88c858;
            border: none;
            padding: 15px;
            border-radius: 10px;
            font-size: 20px;
            font-weight:600;
            cursor: pointer;
            width: 100%;
            margin-top: 15px;
            transition-duration: 0.1s;
        }

        .btn-primary a {
            color: #fff;
            text-decoration: none;
        }

        .btn-primary:hover {
            background-color: #6b9e43;
            transition-duration: 0.1s;
        }

        .separator-container {
            display: grid;
            grid-template-columns: 1fr auto 1fr;
            align-items: center;
            gap: 10px;
            margin: 20px 0;
            color: #666;
        }

        .separator-line {
            border-top: 1px solid #ccc;
        }

        .create-account {
            background-color: #FAFBFC;
            border: 1px solid rgba(27, 31, 35, 0.15);
            border-radius: 6px;
            box-shadow: rgba(27, 31, 35, 0.04) 0 1px 0, rgba(255, 255, 255, 0.25) 0 1px 0 inset;
            transition-duration: 0.1s;
            padding: 15px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            line-height: 20px;
            text-align: center;
            margin-top: 20px;
        }

        .create-account:hover {
