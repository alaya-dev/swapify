{% extends 'dashBord_user.html.twig' %}

{% block title %}Drafts{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <style>
        /* Custom styles for the table */
        .table thead th {
            background-color: #f8f9fa;
            font-weight: bold;
        }
        .table tbody tr:hover {
            background-color: #f1f1f1;
        }
        .badge {
            font-size: 0.9em;
            padding: 0.5em 0.75em;
        }
        .badge-success {
            background-color: #28a745;
        }
        .badge-warning {
            background-color: #ffc107;
        }
        .badge-danger {
            background-color: #dc3545;
        }
        .img-thumbnail {
            max-width: 100px;
            height: auto;
        }
    </style>

    <div class="container mt-5">
        <h1 class="text-center mb-4">My Drafts</h1>

        {# Flash messages #}
        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} text-center">
                {% for message in messages %}
                    <p class="mb-0">{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}

        {# Table for Drafts #}
        <div class="row">
            <div class="col-12">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Titre</th>
                            <th>Contenu</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for blog in drafts %}
                            <tr>
                                <td>
                                    {% if blog.image %}
                                        <img src="{{ asset('uploads/images/' ~ blog.image) }}" alt="{{ blog.Titre }}" class="img-thumbnail">
                                    {% else %}
                                        <img src="{{ asset('uploads/images/blog.jpg') }}" alt="{{ blog.Titre }}" class="img-thumbnail">
                                    {% endif %}
                                </td>
                                <td>{{ blog.Titre }}</td>
                                <td>{{ blog.Contenu|raw|slice(0, 100) ~ '...' }}</td>
                                <td>
                                    <span class="badge badge-warning">
                                        {{ blog.statut.value }}
                                    </span>
                                </td>
                                <td>
                                    <a href="{{ path('app_blog_show', {'id': blog.id}) }}" class="btn btn-primary btn-sm">Voir Plus</a>
                                    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-muted text-center">No drafts found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}