{% extends 'include.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }} <!-- Formulaire sans validation HTML -->

                            <div class="mb-3 row">
                                <label for="nom" class="col-md-2 col-form-label">Nom *</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.nom, { 
                                        'attr': { 
                                            'class': 'form-control', 
                                            'id': 'example-text-input', 
                                            'placeholder': 'Votre nom' 
                                        } 
                                    }) }}
                                    <div style="color: red;">{{ form_errors(form.nom) }}</div>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="example-prenom-input" class="col-md-2 col-form-label">Prénom *</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.prenom, { 
                                        'attr': { 
                                            'class': 'form-control', 
                                            'id': 'example-prenom-input', 
                                            'placeholder': 'Votre prénom' 
                                        } 
                                    }) }}
                                    <div style="color: red;">{{ form_errors(form.prenom) }}</div>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="example-email-input" class="col-md-2 col-form-label">E-mail *</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.email, { 
                                        'attr': { 
                                            'class': 'form-control', 
                                            'id': 'example-email-input', 
                                            'placeholder': 'Votre email' 
                                        } 
                                    }) }}
                                    <div style="color: red;">{{ form_errors(form.email) }}</div>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="example-dateNaissance-input" class="col-md-2 col-form-label">Date de naissance *</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.dateNaissance, { 
                                        'attr': { 
                                            'class': 'form-control', 
                                            'id': 'example-dateNaissance-input', 
                                            'placeholder': 'Votre date de naissance' 
                                        } 
                                    }) }}
                                    <div style="color: red;">{{ form_errors(form.dateNaissance) }}</div>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="example-tel-input" class="col-md-2 col-form-label">Téléphone *</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.tel, { 
                                        'attr': { 
                                            'class': 'form-control', 
                                            'id': 'example-tel-input', 
                                            'placeholder': 'Votre numéro de téléphone' 
                                        } 
                                    }) }}
                                    <div style="color: red;">{{ form_errors(form.tel) }}</div>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="example-adresse-input" class="col-md-2 col-form-label">Adresse</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.adresse, { 
                                        'attr': { 
                                            'class': 'form-control', 
                                            'id': 'example-adresse-input', 
                                            'placeholder': 'Votre adresse' 
                                        } 
                                    }) }}
                                    <div style="color: red;">{{ form_errors(form.adresse) }}</div>
                                </div>
                            </div>


                            <div class="mb-3 row">
                                <label for="example-password-input" class="col-md-2 col-form-label">Mot de passe *</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.password.first, { 
                                        'attr': { 
                                            'class': 'form-control', 
                                            'id': 'example-password-input', 
                                            'placeholder': '***********' 
                                        } 
                                    }) }}
                                    <div style="color: red;">{{ form_errors(form.password.first) }}</div>
                                </div>
                            </div>


                            <div class="mb-3 row">
                                <label for="example-password-confirmation-input" class="col-md-2 col-form-label">Confirmer votre mot de passe *</label>
                                <div class="col-md-10">
                                    {{ form_widget(form.password.second, { 
                                        'attr': { 
                                            'class': 'form-control', 
                                            'id': 'example-password-confirmation-input', 
                                            'placeholder': '***********' 
                                        } 
                                    }) }}
                                    <div style="color: red;">{{ form_errors(form.password.second) }}</div>
                                </div>
                            </div>

                            
                            <button type="submit" class="btn btn-primary">Ajouter</button>
                        {{ form_end(form) }}
                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div> <!-- end col -->
        </div> <!-- end row -->
    </div> <!-- end container-fluid -->
{% endblock %}

{% block javascripts %}

{% endblock %}
