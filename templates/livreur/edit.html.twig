{% extends 'include.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">Modifier un livreur</h1>

                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="mb-3 row">
                            <label for="nom" class="col-md-2 col-form-label">Nom *</label>
                            <div class="col-md-10">
                                {{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'placeholder': 'Nom du livreur'} }) }}
                                <div style="color: red;">{{ form_errors(form.nom) }}</div>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label for="societe" class="col-md-2 col-form-label">Société *</label>
                            <div class="col-md-10">
                                {{ form_widget(form.societe, { 'attr': {'class': 'form-control', 'placeholder': 'Nom de la société'} }) }}
                                <div style="color: red;">{{ form_errors(form.societe) }}</div>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label for="contact" class="col-md-2 col-form-label">Contact *</label>
                            <div class="col-md-10">
                                {{ form_widget(form.contact, { 'attr': {'class': 'form-control', 'placeholder': 'Numéro de contact'} }) }}
                                <div style="color: red;">{{ form_errors(form.contact) }}</div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">Mettre à jour</button>
                        {{ form_end(form) }}

                        <a href="{{ path('app_livreur_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>

                        <a href="{{ path('app_livreur_delete', { 'id': livreur.id }) }}" class="btn btn-danger mt-3"
                        onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce livreur ?');">
                         Supprimer
                     </a>                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div> <!-- end col -->
        </div> <!-- end row -->
    </div> <!-- end container-fluid -->
{% endblock %}
