{% extends 'souk_base.html.twig' %}

{% block body %}
    {{ include('layout/navBar/auth_nav.html.twig') }}
   <div class="bg-gray-100 h-screen flex items-center">
    <div class="container mx-auto px-4 py-8 flex-grow">
        <div class="flex flex-wrap items-center -mx-4">
            <!-- Product Images -->
            <div class="w-full md:w-1/2 px-4 mb-8 flex items-center">
                <img 
                    src="{{ asset('/uploads/products/' ~ product.image) }}" 
                    alt="Product" 
                    class="w-full  max-h-[400px] object-contain rounded-lg shadow-md" 
                    id="mainImage"
                    style='height: 300px;'
                />
            </div>
            <!-- Product Details -->
            <div class="w-full md:w-1/2 px-4">
                <h2 class="text-3xl  font-bold mb-5 ">{{product.name}}</h2>

                <!-- Price Section -->
                <div class="mb-4">
                    <span class="text-2xl font-bold mr-2">${{product.discoutPrice}}</span>
                    <span class="text-gray-500 line-through">${{product.price}}</span>
                </div>

                <!-- Product Description -->
                <p class="text-gray-700 mb-6">
                    {{product.description}}
                </p>

                <!-- Buttons -->
                <div class="flex space-x-4 mb-6">
                    <button
                        class="bg-gray-200 flex gap-2 items-center text-gray-800 px-6 py-2 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                        <i class="fa fa-credit-card" aria-hidden="true"></i>
                        passe Commande
                    </button>
                </div>

                <!-- Key Features -->
                <div>
                    <div class="flex items-center gap-3">
                        <div class="relative">
                            <img class="h-16 w-16 rounded-full object-cover" src="https://randomuser.me/api/portraits/women/87.jpg" alt="Avatar">
                            <div class="absolute inset-0 rounded-full shadow-inner"></div>
                        </div>
                        <div class="ml-4">
                            <h2 class="font-bold text-gray-800 text-lg">{{product.owner.nom}}</h2>
                            <p class="text-gray-600">{{product.owner.email}}</p>
                        </div>
                        {% if app.user != product.owner %}
                        <a href="{{path('conversation.show' , {'recipient' : product.owner.id })}}" class="bg-green-600 flex gap-2 items-center text-white px-6 py-2 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                            <i class="fas fa-envelope-open"></i>  
                            contact
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}