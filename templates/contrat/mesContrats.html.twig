{% set template_to_extend = 'include.html.twig' %}
{% if 'ROLE_CLIENT' in app.user.getRoles() %}
    {% set template_to_extend = 'dashBord_user.html.twig' %}
{% endif %}

{% extends template_to_extend %}

{% block content %}


    <style>
        .container {
            max-width: 1200px;
            margin: auto;
            padding: 20px;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .table-responsive {
            overflow-x: auto;
            margin-top: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
        }

        .table thead th {
            background-color: #4a90e2;
            color: white;
            padding: 12px;
            text-align: left;
            font-weight: 600;
        }

        .table tbody td {
            padding: 12px;
            border-bottom: 1px solid #e0e0e0;
            color: #333;
        }

        .table tbody tr:hover {
            background-color: #f9f9f9;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f8f9fa;
        }

        .btn-info {
            background-color: #4a90e2;
            border: none;
            color: white;
            padding: 8px 16px;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

        .btn-info:hover {
            background-color: #357abd;
        }

        .text-center {
            text-align: center;
        }

        .mt-5 {
            margin-top: 3rem;
        }

        .mb-4 {
            margin-bottom: 1.5rem;
        }

        .btn-sm {
            padding: 6px 12px;
            font-size: 12px;
            border-radius: 4px;
        }

        .no-data {
            color: #777;
            font-style: italic;
        }

          .fade-out {
            animation: fadeOut 5s forwards; /* 5 seconds duration */
        }

        @keyframes fadeOut {
            0% { opacity: 1; }
            90% { opacity: 1; }
            100% { opacity: 0; display: none; }
        }
    </style>

           <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <div class="container mt-5">
     {% for type, messages in app.flashes %}
        {% if type == 'success' %}
            {% for message in messages %}
                <div class="alert alert-success fade-out">
                    {{ message }}
                </div>
            {% endfor %}
        {% elseif type == 'warning' %}
            {% for message in messages %}
                <div class="alert alert-warning fade-out">
                    {{ message }}
                </div>
            {% endfor %}
        {% elseif type == 'error' %}
            {% for message in messages %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        {% endif %}
    {% endfor %}
        <h1>Mes Contrats</h1>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Objet du Contrat</th>
                        <th>Signature du Créateur d'Annonce</th>
                        <th>Signature du Créateur de l'Offre</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contrat in contrats %}
                        <tr>
                            <td>{{ contrat.decodedClauses['Objet du Contrat']|default('Non spécifié') }}</td>
                            <td>{{ contrat.signeeOwnerAnnonce ? 'Signée' : 'Pas encore' }}</td>
                            <td>{{ contrat.signeeOffreMaker ? 'Signée' : 'Pas encore' }}</td>
                            <td>
                                <a href="{{ path('app_contrat_show', {'id': contrat.id}) }}" class="btn btn-info btn-sm">
                                    Détails
                                </a>
                                 {% if not contrat.signeeOwnerAnnonce %}
                        <form action="{{ path('app_signeMonContrat', {'id': contrat.id}) }}" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-warning btn-sm">
                                Signer
                            </button>
                        </form>
                    {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center no-data">Aucun contrat trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
