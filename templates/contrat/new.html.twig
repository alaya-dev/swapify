{% if 'ROLE_ADMIN' in app.user.getRoles() %}
    {% set template_to_extend = 'include.html.twig' %}
{% elseif 'ROLE_SUPER_ADMIN' in app.user.getRoles() %}
    {% set template_to_extend = 'include.html.twig' %}
{% elseif 'ROLE_CLIENT' in app.user.getRoles() %}
    {% set template_to_extend = 'base.html.twig' %}
{% endif %}

{% extends template_to_extend %}

{% block body %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #2c3e50; 
            text-align: center;
            margin-top: 2rem;
            margin-bottom: 2rem;
            position: relative;
            display: inline-block;
            padding-bottom: 0.5rem;
        }

        h1::after {
            content: '';
            position: absolute;
            left: 50%;
            bottom: 0;
            width: 60px;
            height: 4px;
            background-color: #4a90e2; 
            transform: translateX(-50%);
            border-radius: 2px;
        }

   
        .back-link {
            display: inline-block;
            margin-top: 1.5rem;
            color: #4a90e2; 
            text-decoration: none;
            font-size: 1rem;
            transition: color 0.3s ease;
        }

        .back-link:hover {
            color: #357abd; 
            text-decoration: underline;
        }

        .form-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }


        a {
        text-decoration: none;
    }
    </style>

    <div class="form-container">
        <h1>Crée un nouveau contrat</h1>

        {{ include('contrat/_form.html.twig') }}

        <a href="{{ path('app_mesContratsSigned') }}" class="back-link">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
{% endblock %}