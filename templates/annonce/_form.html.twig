


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>

    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }
    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .card h2 {
        color: #007bff;
        font-weight: bold;
    }
    .form-label {
        font-weight: bold;
        color: #495057;
    }
    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding: 10px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }
    .form-control:focus, .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px;
        font-size: 1rem;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }
    .btn-primary:hover {
        background-color: #0056b3;
    }
    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 10px;
        font-size: 1rem;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }
    .btn-danger:hover {
        background-color: #c82333;
    }
    .btn-outline-secondary {
        border-radius: 8px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }
    .input-group {
        margin-bottom: 1rem;
    }
    .input-group .btn {
        border-radius: 0 8px 8px 0;
    }
    .input-group .form-select {
        border-radius: 8px 0 0 8px;
    }
</style>

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="mb-4 text-center">Créer une Annonce</h2>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="row">

            <div class="col-md-6 mb-3">
                {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Entrez un titre'}}) }}
            </div>

      <div class="col-md-6 mb-3">

    {{ form_label(form.categorie, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}

          <div class="input-group">
            {{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
            <a href="{{ path('app_categorie_new') }}" class="btn btn-outline-secondary">
                <i class="fas fa-plus"></i>
                </a>
                </div>
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Décrivez votre annonce'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.Region, 'Région', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.Region, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.imageFile, 'Images', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control', 'multiple': 'multiple'}}) }}
        </div>

        {{ form_widget(form.localisation_x) }}
        {{ form_widget(form.localisation_y) }}

        <button class="btn btn-primary w-100 mt-3">
            <i class="fas fa-paper-plane"></i> {{ button_label|default('Publier l\'annonce') }}
        </button>

        {{ form_end(form) }}

        <a class="btn btn-danger w-100 mt-3" href="{{ path('app_annonce_index') }}">
            <i class="fas fa-times"></i> Annuler
        </a>
    </div>
</div>


