{% extends 'base.html.twig' %}

{% block title %}Liste des Annonces{% endblock %}
{% block body %}
    {# External Libraries #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div id='Errro_msg' class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline">{{message}}</span>
                <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
                <svg id='closeBtn' class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
                </span>
            </div>
        {% endfor %}
    {% endfor %}

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" integrity="sha256-KzZiKy0DWYsnwMF+X1DvQngQ2/FxF7MF3Ff72XcpuPs=" crossorigin="anonymous"></script>
    <div class="min-h-screen bg-gradient-to-br from-white-600 to-teal-400 relative">
        <h3 class="text-center text-2xl font-bold py-4 bg-gradient-to-r from-white-700 to-teal-500 rounded-lg shadow-md">
            Liste des Annonces
        </h3>
        <div class="grid mt-3 md:grid-cols-2 gap-6">
            <div class="bg-white p-6 rounded-lg shadow-lg overflow-y-auto max-h-[800px]">
                {{ include('annonce/_formAnFilter.html.twig') }}
                {% if annonces is defined and annonces is not empty %}
                    {% for annonce in annonces %}
                        <div class="flex p-4 bg-white rounded-lg shadow-md hover:shadow-lg transition-all mb-4">
                            <div class="mr-4">
                                {% for image in annonce.images %}
                                    {% if annonce.id == image.annonce.id and loop.first %}
                                        <img src="{{ asset('uploads/images/' ~ image.imageName) }}" alt="Annonce Image" class="w-32 h-32 object-cover rounded-lg">
                                    {% endif %}
                                {% endfor %}
                            </div>

                            <div class="flex-1">
                                <div class="text-lg font-bold text-green-700">{{ annonce.titre }}</div>
                                <div class="text-gray-600">Région: {{ annonce.region }}</div>
                                <div class="text-gray-600">Catégorie: {{ annonce.categorie.libelle }}</div>
                                <div class="text-gray-500 text-sm">Créé le: {{ annonce.dateCreation|date('j M Y') }}</div>

                                <div class="mt-3 flex space-x-2">
                                    {% if  app.user != annonce.user %}
                                        <button href="" id="openButton" class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-sm shadow">
                                            <i class="fas fa-paper-plane"></i> Envoyer Offre
                                        </button>
                                    {% endif %}
                                    <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm shadow">
                                        <i class="fas fa-eye"></i> Voir Détails
                                    </a>
                                </div>
                            </div>
                        </div>
                         <div id="overlay" class="hidden fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm z-50">
                            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-100 p-[50px] rounded-md bg-white ">
                              <div class="relative">
                                    <div id="btnClose" >
                                        <i class="fa fa-times absolute top-[-30px] left-[-30px] "  aria-hidden="true"></i>
                                    </div>
                                   <form id="offerForm" methode='POST'>
                                        <div class="mb-5">
                                            <h1 class="text-3xl font-bold text-gray-800">{{ annonce.titre }}</h1>
                                        </div>
                                        <div class="mb-3">
                                            <label for="offerDescription" class="form-label">Votre offre</label>
                                            <textarea class="form-control" id="offerDescription" rows="3" ></textarea>
                                        </div>
                                        <input type="hidden" id="annonceId" value="{{ annonce.id }}">
                                        <button type="submit" class="btn btn-success w-100">Envoyer l'Offre</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="text-center text-gray-500">Aucune annonce disponible.</div>
                {% endif %}
            </div>
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <div id="map" class="h-[800px] z-0"></div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var map = L.map('map').setView([36.8065, 10.1815], 12);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);

            {% for item in annonces %}
                L.marker([{{ item.x }}, {{ item.y }}])
                    .addTo(map)
                    .bindPopup("<b>{{ item.user.email }}</b>")
                    .openPopup();
            {% endfor %}
        });
        //
        const overlay = document.getElementById('overlay');
        const error_div = document.getElementById('Errro_msg');
        const openButton = document.getElementById('openButton');
        const removeBtn = document.getElementById('closeBtn');
        const closebtn = document.getElementById('btnClose');

        closebtn.addEventListener('click' , () => {
            overlay.classList.add('hidden'); 
        })
        openButton.addEventListener('click', () => {
            overlay.classList.remove('hidden'); 
        });
       

        // post request for send offre  
       document.getElementById("offerForm").addEventListener("submit", async function (event) {
    event.preventDefault();
    const description = document.getElementById("offerDescription").value;
    const annonceId = document.getElementById("annonceId").value;

    if (!description) {
        alert("Veuillez remplir la description de l'offre.");
        return;
    }

    try {
        const response = await fetch("/offre/new", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
                "X-Requested-With": "XMLHttpRequest"
            },
            body: JSON.stringify({
                description: description,
                annonceId: annonceId
            })
        });

        const result = await response.json();
        if (result.ok) {
            alert('votre offre envoyer avec succees vous pouves contacter l utilisateur ');
        } else {
            alert(result.error);
        }
    } catch (error) {
        alert("Une erreur s'est produite lors de l'envoi de l'offre.");
    } finally {
        overlay.classList.add('hidden');
    }});
    </script>
{% endblock %}