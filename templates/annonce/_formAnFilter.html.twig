{{ form_start(form, {'attr': {'class': 'my-form-class'}}) }}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Title Input -->
            <div class="form-group mb-4">
                {{ form_row(form.titre, {
                    'attr': {
                        'class': 'form-control form-control-lg',
                        'placeholder': 'Rechercher...',
                        'aria-label': 'Search title'
                    }
                }) }}
            </div>

            <div class="row g-3 align-items-end">
                <!-- Category Input -->
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_row(form.categorie, {
                            'attr': {
                                'class': 'form-control',
                                'aria-label': 'Category'
                            }
                        }) }}
                    </div>
                </div>
                <!-- Region Input -->
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_row(form.Region, {
                            'attr': {
                                'class': 'form-control',
                                'aria-label': 'Region'
                            }
                        }) }}
                    </div>
                </div>
                <!-- Date Input -->
                <div class="col-md-3">
                    <div class="form-group">
                        {{ form_row(form.dateCreation, {
                            'attr': {
                                'class': 'form-control',
                                'aria-label': 'Creation Date'
                            }
                        }) }}
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn btn-lg text-white fw-bold"
                        style="background: linear-gradient(90deg, rgb(9, 99, 45), rgb(0, 212, 127)); border: none; border-radius: 10px; padding: 10px 20px; transition: all 0.3s ease;">
                        <i class="fas fa-search me-2"></i>Search
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

{{ form_end(form) }}

