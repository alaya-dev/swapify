{% extends 'dashBord_user.html.twig' %}

{% block content %}
   <!-- Chat Container -->
    <div class="w-full h-screen bg-gray-100">
        <div class="w-full h-32" style="background-color: #449388"></div>
        <!-- Chat Interface -->
        <div class="container mx-auto" style="margin-top: -128px;">
            <div class="py-6 h-screen">
                <div class="flex border border-gray-300 rounded-lg shadow-lg h-full overflow-hidden">
                    <div class="w-1/3 border-r border-gray-300 flex flex-col bg-white">
                        <div class="py-2 px-3 bg-gray-100 flex flex-row justify-between items-center">
                            <div>
                                <img class="w-10 h-10 rounded-full" src="http://andressantibanez.com/res/avatar.png"/>
                            </div>

                            <div class="flex space-x-4">
                                <i class="fas fa-circle-notch text-gray-600"></i>
                                <i class="fas fa-comment-alt text-gray-600"></i>
                                <i class="fas fa-ellipsis-v text-gray-600"></i>
                            </div>
                        </div>
                        <div class="py-2 px-2 bg-gray-100">
                            <input type="text" class="w-full px-2 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none" placeholder="Search or start new chat"/>
                        </div>
                        <!-- Contacts List -->
                        <div class="flex-1 overflow-y-auto scrollbar-hide">
                            <div class="px-3 flex items-center bg-gray-100 cursor-pointer hover:bg-gray-200">
                                <div>
                                    <img class="h-12 w-12 rounded-full"
                                         src="https://darrenjameseeley.files.wordpress.com/2014/09/expendables3.jpeg"/>
                                </div>
                                <div class="ml-4 flex-1 border-b border-gray-200 py-4">
                                    <div class="flex items-bottom justify-between">
                                        <p class="text-gray-800 font-medium">
                                            New Movie! Expendables 4
                                        </p>
                                        <p class="text-xs text-gray-500">
                                            12:45 pm
                                        </p>
                                    </div>
                                    <p class="text-gray-600 mt-1 text-sm">
                                        Get Andrés on this movie ASAP!
                                    </p>
                                </div>
                            </div>
                            <div class="px-3 flex items-center bg-white cursor-pointer hover:bg-gray-100">
                                <div>
                                    <img class="h-12 w-12 rounded-full"
                                         src="https://www.biography.com/.image/t_share/MTE5NDg0MDU1MTIyMTE4MTU5/arnold-schwarzenegger-9476355-1-402.jpg"/>
                                </div>
                                <div class="ml-4 flex-1 border-b border-gray-200 py-4">
                                    <div class="flex items-bottom justify-between">
                                        <p class="text-gray-800 font-medium">
                                            Arnold Schwarzenegger
                                        </p>
                                        <p class="text-xs text-gray-500">
                                            12:45 pm
                                        </p>
                                    </div>
                                    <p class="text-gray-600 mt-1 text-sm">
                                        I'll be back
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Right Side (Chat) -->
                    <div class="w-2/3 flex flex-col bg-gray-50">
                        <!-- Chat Header -->
                        <div class="py-2 px-3 bg-gray-100 flex flex-row justify-between items-center">
                            <div class="flex items-center">
                                <div>
                                    <img class="w-10 h-10 rounded-full" src="https://darrenjameseeley.files.wordpress.com/2014/09/expendables3.jpeg"/>
                                </div>
                                <div class="ml-4">
                                    <p class="text-gray-800 font-medium">
                                        New Movie! Expendables 4
                                    </p>
                                    <p class="text-gray-600 text-xs mt-1">
                                        Andrés, Tom, Harrison, Arnold, Sylvester
                                    </p>
                                </div>
                            </div>

                            <div class="flex space-x-4">
                                <i class="fas fa-search text-gray-600"></i>
                                <i class="fas fa-paperclip text-gray-600"></i>
                                <i class="fas fa-ellipsis-v text-gray-600"></i>
                            </div>
                        </div>

                        <!-- Messages Container -->
                        <div class="flex-1 overflow-y-auto p-4 scrollbar-hide" style="background-color: #DAD3CC">
                            <!-- Date Stamp -->
                            <div class="flex justify-center mb-2">
                                <div class="rounded py-2 px-4 bg-blue-100">
                                    <p class="text-sm uppercase text-gray-700">
                                        February 20, 2018
                                    </p>
                                </div>
                            </div>

                            <!-- Encryption Message -->
                            <div class="flex justify-center mb-4">
                                <div class="rounded py-2 px-4 bg-yellow-100">
                                    <p class="text-xs text-gray-700">
                                        Messages to this chat and calls are now secured with end-to-end encryption. Tap for more info.
                                    </p>
                                </div>
                            </div>

                            <!-- Messages -->
                            <div class="flex mb-2">
                                <div class="rounded py-2 px-3 bg-white">
                                    <p class="text-sm text-teal-600 font-medium">
                                        Sylverter Stallone
                                    </p>
                                    <p class="text-sm mt-1 text-gray-800">
                                        Hi everyone! Glad you could join! I am making a new movie.
                                    </p>
                                    <p class="text-right text-xs text-gray-500 mt-1">
                                        12:45 pm
                                    </p>
                                </div>
                            </div>

                            <!-- Repeat for other messages -->
                            <div class="flex justify-end mb-2">
                                <div class="rounded py-2 px-3 bg-green-100">
                                    <p class="text-sm mt-1 text-gray-800">
                                        Hi guys.
                                    </p>
                                    <p class="text-right text-xs text-gray-500 mt-1">
                                        12:45 pm
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Input Area -->
                        <div class="bg-gray-100 px-4 py-4 flex items-center">
                            <div>
                                <i class="fas fa-smile text-gray-600"></i>
                            </div>
                            <div class="flex-1 mx-4">
                                <input class="w-full px-2 py-2 border border-gray-300 rounded-lg focus:outline-none" type="text" placeholder="Type a message"/>
                            </div>
                            <div>
                                <i class="fas fa-paper-plane text-gray-600"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}