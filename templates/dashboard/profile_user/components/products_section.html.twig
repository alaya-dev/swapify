<div class="bg-white p-6 rounded-lg shadow-lg md:col-span-3">
    <h2 class="text-xl font-bold mb-4">My Products</h2>
    <div class="flex flex-col gap-4 h-[721px] overflow-y-auto">
        {% for product in my_products %}
            <div class="flex-shrink-0 w-full bg-gray-100 p-4 rounded-lg shadow">
                <div class="flex items-center justify-between space-x-4">
                    <img class="w-12 h-12 rounded-full object-cover" src="{{ asset('/uploads/products/' ~ product.image) }}" alt="{{ product.image }}">
                    <h3 class="text-lg font-semibold">{{ product.name }}</h3>
                    <div class="flex gap-2">
                        <a href="{{path('update_products' , {'id' : product.id } )}}" class="px-3 py-1 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Edit</a>
                        <a href="{{path('product_delet' , {'id' : product.id } )}}" class="px-3 py-1 bg-red-500 text-white rounded-lg hover:bg-red-600">Delete</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>