<div class="bg-white p-6 rounded-lg shadow-lg md:col-span-3">
    <h2 class="text-xl font-bold mb-4">My Products</h2>
    <div class="flex flex-col gap-4 h-96 overflow-y-auto">
        {% set products = [
            { name: 'Product 1', image: '#' },
            { name: 'Product 2', image: '#' },
            { name: 'Product 3', image: '#' },
            { name: 'Product 4', image: '#' },
            { name: 'Product 5', image: '#' },
            { name: 'Product 6', image: '#' }
        ] %}
        {% for product in products %}
            <div class="flex-shrink-0 w-full bg-gray-100 p-4 rounded-lg shadow">
                <div class="flex items-center justify-between space-x-4">
                    <!-- Product Image -->
                    <img class="w-12 h-12 rounded-full object-cover" src="{{ product.image }}" alt="{{ product.name }}">
                    <!-- Product Name -->
                    <h3 class="text-lg font-semibold">{{ product.name }}</h3>
                    <!-- Buttons -->
                    <div class="flex gap-2">
                        <button class="px-3 py-1 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Edit</button>
                        <button class="px-3 py-1 bg-red-500 text-white rounded-lg hover:bg-red-600">Delete</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>