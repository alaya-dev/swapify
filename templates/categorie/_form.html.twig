<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

<div class="form-container p-4 shadow rounded bg-white">
    <h1 class="title text-center mb-4">Ajouter une nouvelle catégorie</h1>


    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.libelle, 'Libellé de la catégorie', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.libelle) }}
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary btn-lg px-4">{{ button_label|default('Enregistrer') }}</button>
            <a href="{{ path('app_annonce_new') }}" class="btn btn-outline-secondary btn-lg px-4">Annuler</a>
        </div>
    {{ form_end(form) }}
</div>

<style>
body {
    font-family: 'Inter', sans-serif;
    background-color: #f8f9fa;
}

.form-container {
    max-width: 480px;
    margin: 50px auto;
    background: white;
}

.title {
    font-weight: 600;
    color: #343a40;
}

.btn {
    min-width: 130px;
    transition: all 0.3s ease-in-out;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}
</style>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

