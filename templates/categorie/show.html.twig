{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}


    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">Categorie</h1>

        <table class="min-w-full bg-white border border-gray-200 rounded-lg overflow-hidden mb-6">
            <tbody class="divide-y divide-gray-200">
                <tr class="hover:bg-gray-50">
                    <th class="py-3 px-4 bg-gray-100 text-left font-semibold">Libelle</th>
                    <td class="py-3 px-4">{{ categorie.libelle }}</td>
                </tr>
            </tbody>
        </table>

        <div class="flex space-x-4 mb-8">
            <a href="{{ path('app_categorie_index') }}" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded inline-flex items-center">
                <i class="fas fa-arrow-left mr-2"></i> Back to list
            </a>
            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded inline-flex items-center">
                <i class="fas fa-edit mr-2"></i> Edit
            </a>
<form method="post" action="{{ path('app_categorie_delete', {'id': categorie.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded inline-flex items-center">
        <i class="fas fa-trash mr-2"></i> Delete
    </button>
</form>        </div>

        <h2 class="text-2xl font-bold mb-4">Annonces in this Category</h2>
        {% if categorie.annonces is not empty %}
            <table class="min-w-full bg-white border border-gray-200 rounded-lg overflow-hidden">
                <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="py-3 px-4 text-left">ID</th>
                        <th class="py-3 px-4 text-left">Title</th>
                        <th class="py-3 px-4 text-left">Description</th>
                        <th class="py-3 px-4 text-left">Date création</th>
                        <th class="py-3 px-4 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for annonce in categorie.annonces %}
                        <tr class="hover:bg-gray-50">
                            <td class="py-3 px-4">{{ annonce.id }}</td>
                            <td class="py-3 px-4">{{ annonce.titre }}</td>
                            <td class="py-3 px-4">{{ annonce.description }}</td>
                            <td class="py-3 px-4">{{ annonce.dateCreation | date }} €</td>
                            <td class="py-3 px-4 text-center">
                                <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-1 px-3 rounded inline-flex items-center mr-2">
                                    <i class="fas fa-eye mr-1"></i> View
                                </a>
                                <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-1 px-3 rounded inline-flex items-center">
                                    <i class="fas fa-edit mr-1"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="text-gray-500 text-center">No annonces found in this category.</p>
        {% endif %}
    </div>
{% endblock %}