{% extends 'include.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <!-- Start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0 font-size-18">Categorie</h4>
                </div>
            </div>
        </div>
        <!-- End page title -->

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categorie Details</h4>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Libelle</th>
                            <td>{{ categorie.libelle }}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to list
                    </a>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i> Edit
                    </a>
                    {{ include('categorie/_delete_form.html.twig') }}
                </div>
                
                <h4 class="mt-4">Annonces in this Category</h4>
                {% if categorie.annonces is not empty %}
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Date cr√©ation</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for annonce in categorie.annonces %}
                                <tr>
                                    <td>{{ annonce.id }}</td>
                                    <td>{{ annonce.titre }}</td>
                                    <td>{{ annonce.description }}</td>
                                    <td>{{ annonce.dateCreation | date }}</td>
                                <td class="text-center d-flex justify-content-center gap-2">
                                        <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="{{ path('app_annonce_delete', {'id': annonce.id}) }}" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p class="text-muted text-center">No annonces found in this category.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}