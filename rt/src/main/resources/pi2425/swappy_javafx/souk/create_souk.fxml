<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" spacing="15" style="-fx-padding: 20;">
    <Label text="Create New Souk" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Souk Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField promptText="Nom du Souk" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Start Date:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <DatePicker GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="End Date:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <DatePicker GridPane.rowIndex="2" GridPane.columnIndex="1" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancel" />
        <Button text="Create Souk" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
    </HBox>
</VBox>