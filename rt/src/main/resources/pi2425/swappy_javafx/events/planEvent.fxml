<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f5f5f5;"
            stylesheets="@../styles/table.css"
            xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pi2425.swappy_javafx.controllers.EventPlanController">
    <top>
        <fx:include fx:id="header" source="../Layout/header.fxml" />
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #f5f5f5;" BorderPane.alignment="CENTER">
            <content>
                <VBox prefHeight="-1" prefWidth="-1" spacing="16.0">
                    <padding>
                        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
                    </padding>
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <TableView fx:id="sessionTableView" style="-fx-background-color: white; -fx-border-color: #e0e0e0;">
                                    <placeholder>
                                        <Label style="-fx-text-fill: #666; -fx-font-size: 14; -fx-padding: 40;"
                                               text="Aucune session trouvée pour cet événement." />
                                    </placeholder>
                                    <columns>
                                        <TableColumn fx:id="objectiveColumn" text="Objectif" />
                                        <TableColumn fx:id="dateDebutColumn" text="Date et Heure de Début" />
                                        <TableColumn fx:id="dateFinColumn" text="Date et Heure de Fin" />
                                        <TableColumn fx:id="typeColumn" text="Type de Session" />
                                        <TableColumn fx:id="actionColumn" text="Actions" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                            <cursor>
                                <Cursor fx:constant="DEFAULT" />
                            </cursor>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>